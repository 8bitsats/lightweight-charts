{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
        "noImplicitAny": false,
		"noEmit": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./**/*.js", "./**/*.mjs", "./global.d.ts"],
	"exclude": ["node_modules"]
}
